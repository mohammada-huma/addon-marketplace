{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss",
      "type": "component",
      "changeDetection": "OnPush"
    },
    "@schematics/angular:directive": {
      "type": "directive"
    },
    "@schematics/angular:service": {
      "type": "service"
    },
    "@schematics/angular:guard": {
      "typeSeparator": "."
    },
    "@schematics/angular:interceptor": {
      "typeSeparator": "."
    },
    "@schematics/angular:module": {
      "typeSeparator": "."
    },
    "@schematics/angular:pipe": {
      "typeSeparator": "."
    },
    "@schematics/angular:resolver": {
      "typeSeparator": "."
    }
  },
  "projects": {
    "marketplace": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "./projects/portal-marketplace/assets",
                "output": "public"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/@huma-engineering/ui-kit/assets",
                "output": "public"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/@huma-engineering/app-kit/assets",
                "output": "public"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/@huma-engineering/auth-kit/assets",
                "output": "public"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/@huma-engineering/portal-helm/assets",
                "output": "public"
              },
              {
                "glob": "**/*",
                "input": "public",
                "output": "public"
              }
            ],
            "styles": [
              "./node_modules/@huma-engineering/ui-kit/theme/styles.scss",
              {
                "input": "./projects/portal-marketplace/themes/styles.scss",
                "inject": false,
                "bundleName": "portal-marketplace-styles"
              },
              {
                "input": "./node_modules/@huma-engineering/portal-helm/themes/styles.scss",
                "inject": false,
                "bundleName": "portal-helm-styles"
              }
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.development.ts",
                  "with": "src/environments/environment.production.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "marketplace:build:production"
            },
            "development": {
              "buildTarget": "marketplace:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "./node_modules/@huma-engineering/ui-kit/theme/styles.scss",
              {
                "input": "./projects/portal-marketplace/themes/styles.scss",
                "inject": false,
                "bundleName": "portal-marketplace-styles"
              }
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        }
      }
    },
    "portal-marketplace": {
      "projectType": "library",
      "root": "projects/portal-marketplace",
      "sourceRoot": "projects/portal-marketplace/src",
      "prefix": "huma",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/portal-marketplace/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/portal-marketplace/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/portal-marketplace/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/portal-marketplace/**/*.ts",
              "projects/portal-marketplace/**/*.html"
            ],
            "eslintConfig": "projects/portal-marketplace/eslint.config.js"
          }
        }
      }
    }
  },
  "cli": {
    "schematicCollections": ["angular-eslint"]
  }
}
